<%= image_tag "bandeau-table.jpg", class:"img-fluid"%>

<h1 class="mt-4">MES BENTOS</h1>
<div class="card-deck">
<%@bento.each do |bento|%>
    
  <div class="card">
    <%= cl_image_tag bento.photo, class:"card-img-top"%>
    <div class="card-body">
      <h5 class="card-title"><%=bento.titre%></h5>
      <p class="card-text"><%=bento.description%></p>
    </div>
    <div class="card-footer">
      <small class="text-muted">Last updated 3 mins ago</small>
    </div>
  </div>  
<%end%>
</div>