<%= image_tag "bandeau-table.jpg", class:"img-fluid"%>

<h1> Les Workshops</h1>


  <%@atelier.each do |atelier|%>
  <div class="card mt-5">
    <div class="row">
      <div class="col-md-4">
       <%= cl_image_tag atelier.photo, class:'card-img w-100'%>
      </div>

      <div class="col-md-8 px-3">
        
        <div class="card-block px-3">

          <h4 class="card-title"><%=atelier.titre%></h4>
          <p class="card-text"><%=atelier.description%></p>
          <div>
            <div class="d-flex justify-content-between ">
              <p class="text-muted"><%=atelier.date%> de <%=atelier.horaires%></p>
              <p class="text-muted"><%=atelier.places%> places</p>
            </div>

            <div class="d-flex justify-content-between">
              <p class="text-muted"><%=atelier.lieu%></p>
              <p class="text-muted"><%=atelier.prix%> euros</p>
              <a href="#" class="btn btn-primary">Read More</a>
            </div>
          </div>

        </div>

      </div>
    </div>
  </div>
  <%end%>
